apiVersion: "v1"
kind: "LimitRange"
metadata:
  name: "resource-limits"
spec:
  limits:
    - type: "Pod"
      max:
        cpu: "{{ pod_max_cpu }}"
        memory: "{{ pod_max_mem }}"
      min:
        cpu: "{{ pod_min_cpu }}"
        memory: "{{ pod_min_mem }}"
    - type: "Container"
      max:
        cpu: "{{ container_max_cpu }}"
        memory: "{{ container_max_mem }}"
      min:
        cpu: "{{ container_min_cpu }}"
        memory: "{{ container_min_mem }}"
      default:
        cpu: "300m"
        memory: "200Mi"
      defaultRequest:
        cpu: "200m"
        memory: "100Mi"
      maxLimitRequestRatio:
        cpu: "10"
